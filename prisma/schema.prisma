generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum City {
  Chandigarh
  Mohali
  Zirakpur
  Panchkula
  Other
}

enum PropertyType {
  Apartment
  Villa
  Plot
  Office
  Retail
}

enum Bhk {
  Studio
  One
  Two
  Three
  Four
}

enum Purpose {
  Buy
  Rent
}

enum Timeline {
  Immediate
  ThreeToSixMonths
  MoreThanSixMonths
  Exploring
}

enum Source {
  Website
  Referral
  WalkIn
  Call
  Other
}

enum Status {
  New
  Qualified
  Contacted
  Visited
  Negotiation
  Converted
  Dropped
}

// Models
model Buyer {
  id           String         @id @default(uuid())
  fullName     String
  email        String?        @unique
  phone        String
  city         City
  propertyType PropertyType
  bhk          Bhk?
  purpose      Purpose
  budgetMin    Int?
  budgetMax    Int?
  timeline     Timeline
  source       Source
  status       Status         @default(New)
  notes        String?
  tags         String[]
  ownerId      String
  updatedAt    DateTime       @updatedAt
  createdAt    DateTime       @default(now())

  history      BuyerHistory[]
}

model BuyerHistory {
  id        String   @id @default(uuid())
  changedBy String
  changedAt DateTime @default(now())
  diff      Json

  buyer   Buyer    @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  buyerId String

  @@index([buyerId])
}